//This is the design code of the traffic controller light according to the description


module traffic_light_controller(glight,rlight,clk,reset);
  output reg glight;
  output reg rlight;
  input clk;
  input reset;
  reg [3:0] counter; 
  parameter GREEN_TIME = 10;
  parameter RED_TIME = 5;
  always @(posedge clk or posedge reset) 
begin
    if (reset) 
    begin
      glight <= 1'b0;
      rlight <= 1'b0;
      counter <= 4'd0;
    end 
   else 
    begin
          if (counter < GREEN_TIME)
              begin
                glight <= 1'b1;
                rlight <= 1'b0;
              end
          else if (counter < (GREEN_TIME + RED_TIME)) 
              begin
                glight <= 1'b0;
                rlight <= 1'b1;
              end 
          else 
              begin
                counter <= 4'd0;
              end
    counter <= counter + 1;
    end
end
endmodule

